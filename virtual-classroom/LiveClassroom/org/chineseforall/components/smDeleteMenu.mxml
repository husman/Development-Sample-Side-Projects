<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   width="134" height="60" borderAlpha="0.9" borderColor="#FFAA16" cornerRadius="8"
				   dropShadowVisible="true">
	<s:layout>
		<s:TileLayout columnWidth="134" horizontalAlign="center" horizontalGap="0" orientation="rows"
					  requestedColumnCount="1" requestedRowCount="1" rowHeight="60"
					  verticalAlign="middle" verticalGap="0"/>
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:VGroup x="96" y="53" width="118" height="52" gap="3">
		<s:HGroup 
			id="tool_deletes_click"
			width="100%" height="24" gap="6" textAlign="left" verticalAlign="middle"
			rollOver="tool_deletes_click_label.styleName = 'lblToolTextHover';"
			rollOut="tool_deletes_click_label.styleName = 'lblToolText';">
			<s:Image id="tool_deletes_click_bullet"
					 source="@Embed('assets/images/tools/selections/sel_bullet.png')" visible="false"/>
			<s:Image source="@Embed('assets/images/tools/selections/sel_deleteClick.png')"/>
			<s:Label id="tool_deletes_click_label" styleName="lblToolText" text="Delete + Click"/>
		</s:HGroup>
		<s:HGroup
			id="tool_deletes_select"
			width="100%" height="24" verticalAlign="middle"
			rollOver="tool_deletes_select_label.styleName = 'lblToolTextHover';"
			rollOut="tool_deletes_select_label.styleName = 'lblToolText';">
			<s:Image id="tool_deletes_select_bullet"
					 source="@Embed('assets/images/tools/selections/sel_bullet.png')" visible="false" />
			<s:Image source="@Embed('assets/images/tools/selections/sel_deleteSelect.png')"/>
			<s:Label id="tool_deletes_select_label" styleName="lblToolText" text="Delete + Select"/>
		</s:HGroup>
	</s:VGroup>
	
</s:BorderContainer>
